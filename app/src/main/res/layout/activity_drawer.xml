<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.onrus.myapplication.Drawer" android:weightSum="1">


    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/optie1"
            android:contentDescription="@string/inlog"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:onClick="login"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/optie2"
            android:contentDescription="@string/home"
            android:layout_marginEnd="50dp"
            android:layout_alignTop="@+id/optie1"
            android:layout_toStartOf="@+id/optie1"
            android:onClick="gohome"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/opties3"
            android:contentDescription="@string/youtube"
            android:layout_marginStart="48dp"
            android:layout_alignTop="@+id/optie1"
            android:layout_toEndOf="@+id/optie1"
            android:onClick="youtube"/>

</RelativeLayout>
